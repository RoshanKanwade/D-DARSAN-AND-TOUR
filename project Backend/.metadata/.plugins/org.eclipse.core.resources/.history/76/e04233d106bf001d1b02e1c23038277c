	@PostMapping(path = "/fggg", consumes = "application/x-www-form-urlencoded")
	public void addRoom( RoomDetailDto roomdetail) throws IOException {
		System.out.println(roomdetail.getImage());
		
	
	    
	}
	@PreAuthorize("permitAll()")
	
	@GetMapping("/addRoom")
	public String addRoom(@RequestParam MultipartFile image,
			@RequestParam int  price,
			@RequestParam int  roomAvailability,
			@RequestParam   String facilities,
			@RequestParam  String diningDescription) {
	   System.out.println(immage ,price,roomAvailability);

	    if (image == null || price ==0 || roomAvailability == 0 || facilities == null || diningDescription == null) {
	        return "Invalid parameters";
	    }

	    // save image to the uploads folder
	    try {
	        byte[] bytes = image.getBytes();
	        Path path = Paths.get("uploads/" + image.getOriginalFilename());
	        Files.write(path, bytes);
	    } catch (IOException e) {
	        e.printStackTrace();
	        return "Error uploading image";
	    }

	    return "Room added successfully";
	}
	
